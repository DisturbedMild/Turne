{% extends "layouts/default-mobile.twig" %}
{% set mobile = 'mobile' %}
{% if mobile %}
    {% set toggleMobileText = "Полная версия" %}
    {% set toggleMobileLink = "hotel-details-search.html" %}
{% else %}
    {% set toggleMobileText = "Мобильная версия" %}
    {% set toggleMobileLink = "hotel-details-search-mobile.html" %}
{% endif %}

{% block searchStyle %}
    <link href="css/bundle/searchStyleMobile.css?v=113" rel="stylesheet"/>
    <link rel="stylesheet" href="css/slick.css">
    <link rel="stylesheet" href="css/slider.css">
    <link rel="stylesheet" href="js/fancybox/jquery.fancybox.min.css">
    <link href="https://www.poehalisnami.ua/jsresourses/map/leaflet_styles.css" rel="preload" as="style"
          onload="this.rel='stylesheet'">
{% endblock %}
{% block head %}
    <link href="css/details-page.css" rel="stylesheet">
    <link href="css/details-page_mobile.css" rel="stylesheet">
{% endblock %}

{% block scripts %}
    <script src="js/slick/slick.min.js" type="text/javascript"></script>
    <script src="js/fancybox/jquery.fancybox.min.js" type="text/javascript"></script>

    <script src="js/detail.js" type="text/javascript"></script>
{% endblock %}

{% block content %}
    <div class="container">
        <nav class="nav-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Главная ТУРНЕ</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#">Поиск туров</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#">Туры в Египет</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#">Туры в Шарм-эль-Шейх</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Туры в отель Sharming Inn Hotel (ex. Sol Y Mar
                    Sharming Inn)
                </li>
            </ol>
        </nav>
        <div class="details-heading">
            <h1 class="heading">Sharming Inn Hotel (ex. Sol Y Mar Sharming Inn), 4*</h1>
        </div>
        <div class="details-place">
            Египет, Шарм-эль-Шейх
        </div>
        <div class="details-tour">
            {% include "hotel-details-modules/gallery-slider.twig" %}
            {% include "hotel-details-modules/info-box-search.twig" %}
        </div>
        <div class="anchor-nav anchor-nav-section">
            <div class="anchor-nav__wrapper js-smooth-scroll">
                <div class="anchor-nav__link">
                    <a href="#tour_search">Туры в отель</a>
                </div>
                <div class="anchor-nav__link">
                    <a href="#">График низких цен</a>
                </div>
                <div class="anchor-nav__link">
                    <a href="#hotel-desc">Описание отеля</a>
                </div>
                <div class="anchor-nav__link">
                    <a href="#reviews">Отзывы (24)</a>
                </div>
                <div class="anchor-nav__link">
                    <a href="#">Отель на карте</a>
                </div>
            </div>
        </div>
    </div>

    <div id="tour_search" class="details-search js-fixed-mobile-order-offset-top">
        <div class="container">
            <div class="details-small-heading">
                Туры в отель Sharming Inn Hotel (ex. Sol Y Mar Sharming Inn) 4*
            </div>
        </div>
        <div class="details-search__bg">
            <div class="container">
                {% include "hotel-details-modules/hotel-search-form.twig" %}
            </div>
        </div>
    </div>

        {% include "hotel-details-modules/null-results-block.twig" %}

    {% include "hotel-details-modules/buy-tour-slider.twig" %}
    <div class="container">
        {% include "hotel-details-modules/price-graphic.twig" %}
        {% include "hotel-details-modules/hotel-info.twig" %}
        {% include "hotel-details-modules/hotel-details-review.twig" %}
        {% include "hotel-details-modules/map.twig" %}
        {% include "hotel-details-modules/suitable-tours-callback.twig" %}
        {% include "hotel-details-modules/hotels.twig" %}
    </div>
    <div style="width: 0; height: 0;">
        <svg>
            <symbol id="progressbar" viewbox="0 0 58 58">
                <circle cx="29" cy="29" r="29"/>
                <path fill="none" stroke-dasharray="140" stroke="#dfe3eb" stroke-width="4"
                      d="M29,6.778c12.273,0,22.222,9.949,22.222,22.222 S41.273,51.222,29,51.222S6.778,41.273,6.778,29S16.727,6.778,29,6.778"/>
                <path fill="none" stroke="#387c89" stroke-width="4"
                      d="M29,6.778c12.273,0,22.222,9.949,22.222,22.222 S41.273,51.222,29,51.222S6.778,41.273,6.778,29S16.727,6.778,29,6.778"/>
            </symbol>
        </svg>
    </div>

{% endblock %}

{% block modals %}
    {% include "components/modal/submit-application-modal.twig" %}
    {% include "components/modal/add-reviews.twig" %}
{% endblock %}